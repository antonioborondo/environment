{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "create-build-folder",
            "type": "shell",
            "command": "New-Item -ItemType Directory -Force -Path build",
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "cmake-configure",
            "type": "shell",
            "command": "cmake -G 'MinGW Makefiles' -DCMAKE_SH=CMAKE_SH-NOTFOUND ..\\",
            "options": {
                "cwd": "${workspaceRoot}\\build",
                "env": {
                    "CXXFLAGS": "-g"
                }
            },
            "dependsOn": [
                "create-build-folder"
            ]
        },
        {
            "label": "cmake-build",
            "type": "shell",
            "command": "cmake --build .",
            "options": {
                "cwd": "${workspaceRoot}\\build"
            },
            "dependsOn": [
                "cmake-configure"
            ]
        }
    ]
}
